//This configuration tells TypeScript how to compile our code.

{
    "include": ["src"],
    "exclude": ["**/*.test.ts"],
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "lib": ["esnext"],
      "declaration": true,
      "strict": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": "./src"
    }
  }